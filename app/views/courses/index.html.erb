<div class="col-lg-8">
<p><%= notice %></p>
<h1>Listing Courses</h1>
<%= link_to 'New Course', new_course_path, class: "btn btn-primary btn-lg mb-3" %>
<table class="table table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.name %></td>
        <td><%= course.description %></td>
        <td><%= link_to 'Show', course, class: "btn btn-primary btn-sm" %></td>
        <td><%= link_to 'Edit', edit_course_path(course), class: "btn btn-primary btn-sm" %></td>
        <td><%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-primary btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @projects %>
</div>

